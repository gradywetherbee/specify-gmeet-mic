{
  "manifest_version": 3,
  "name": "Specify Gmeet Mic",
  "description": "Make Gmeet automatically use a specific mic, every time.",
  "version": "0.0.0.3",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png",
    "128": "128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": ["storage"]
}
